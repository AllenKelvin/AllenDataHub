{
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "public": "dist/public",
  "rewrites": [
    { "source": "/api/:path*", "destination": "https://allen-data-hub-backend.onrender.com/api/:path*" }
  ],
  "routes": [
    { "src": "^/api/.*", "dest": "/api/:path*" },
    { "src": "^/.*", "dest": "/index.html" }
  ]
}
