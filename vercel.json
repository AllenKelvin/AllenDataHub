{
  "buildCommand": "npm run build",
  "outputDirectory": "./dist/public",
  "cleanUrls": true,
  "trailingSlash": false,
  "rewrites": [
    { "source": "/api/:path*", "destination": "https://allen-data-hub-backend.onrender.com/api/:path*" }
  ],
  "routes": [
    { "src": "^/(?!api).*", "dest": "/index.html" }
  ]
}
